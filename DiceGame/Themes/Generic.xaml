<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DiceGame">
    <local:EllipseConverter x:Key="con" />
    <Style x:Key="DiceEllipse" TargetType="{x:Type Ellipse}">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Fill" Value="White" />
        <Setter Property="Stroke" Value="White" />
        <Setter Property="MinWidth" Value="10" />

        <Setter Property="MinHeight" Value="10" />


    </Style>
    <Style x:Key="DiceBorder" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="Red" />
        <Setter Property="BorderBrush" Value="Red" />
    </Style>
    <Style x:Key="TotalDicePoints" TargetType="{x:Type local:DiceButton}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            Foreground="Red"
                            Text="{Binding Text1}" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            TextWrapping="Wrap"
                            Text="{Binding Text2}" />
                    </Grid>
                </DataTemplate>
            </Setter.Value>
                
        </Setter>
    </Style>
</ResourceDictionary>